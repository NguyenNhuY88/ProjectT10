<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:id="@+id/parent_layout_suggest_card">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_gradient_item"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/iv_card_suggest"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:padding="5dp" />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_card_name_suggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên Thẻ"
                android:textStyle="bold"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_marginTop="10dp"
                android:padding="2dp"
                android:textColor="#4d4d4d" />
            <TextView
                android:id="@+id/tv_category_suggest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categoty"
                android:textStyle="italic"
                android:textColor="#4d4d4d" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>